{
  "manifest_version": 3,
  "name": "Bag That",
  "version": "1.0.0",
  "description": "An extension to help you save money by finding coupons and deals.",
  "icons": {
    "128": "icon-128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon-128.png",
    "default_width": "400",
    "default_height": "500"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"]
}
